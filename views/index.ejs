<!-- Header -->


<%- include('partials/_header.ejs') -%>


  <body>

    <!-- Navigation -->


    <%- include('partials/_navigation.ejs') -%>


      <!-- Page Header -->
      <header class="masthead" style="background-image: url('img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="site-heading">
                <h1>Clean Blog</h1>
                <span class="subheading">A Blog Theme by Start Bootstrap</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">

            <% for (let i=0; i < posts.length; i++) { %>

              <div class="post-preview">
                <a href="/posts/<%= posts[i]._id %>">
                  <h2 class="post-title">
                    <%= posts[i].title %>
                  </h2>
                  <h3 class="post-subtitle">
                    <%= posts[i].detail %>
                  </h3>
                </a>
                <p class="post-meta">
                  <%=posts[i].dateCreated%>
                </p>
              </div>
              <hr>

              <% } %>

                <!-- Pager -->
                <div class="clearfix">

                  <%if (current==1) {%>
                   <a class="btn btn-primary float-right" href="/?page=<%= Number(current)+1 %> ">Older Posts &rarr;</a>
                   <% } %>
                
                  <%if (current==pages) {%>
                   <a class="btn btn-primary float-left" href="/?page=<%= Number(current)-1 %> ">&larr; Newer Posts </a>
                   <% } %>
                  
                  <%if (current !=1 && current !=pages) { %>
                     <a class="btn btn-primary float-right" href="/?page=<%= Number(current)+1 %> ">Older Posts &rarr;</a>
                            <a class="btn btn-primary float-left" href="/?page=<%= Number(current)-1 %> ">&larr; Newer Posts </a>
                   <% } %>
                </div>





          </div>
        </div>
      </div>




      <hr>

      <!-- Footer -->
      <%- include('partials/_footer.ejs') -%>

        <!-- Custom scripts for this template -->
        <script src="js/clean-blog.min.js"></script>

  </body>

  </html>