<%- include('partials/_header.ejs') -%>


  <body>

    <!-- Navigation -->

    <%- include('partials/_navigation.ejs') -%>


      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h1><%= post.title %></h1>
                <h2 class="subheading">P<%= post.detail %></h2>
                <span class="meta"><%= post.dateCreated %></span>
                <br> <br><br> 
                <a href="/posts/edit/<%= post._id %>" type="submit" class="btn btn-primary" id="sendMessageButton">Edit</a>
                <a href="/posts/<%= post._id %>?_method=DELETE" type="submit" class="btn btn-primary" id="sendMessageButton" style="background-color: darkred;"
                  onclick="return confirm('ARE YOU SURE?')">Delete</a>


              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Post Content -->
   
      <hr>

      <!-- Footer -->

      <%- include('partials/_footer.ejs') -%>


        <!-- Custom scripts for this template -->
        <script src="js/clean-blog.min.js"></script>

  </body>

  </html>